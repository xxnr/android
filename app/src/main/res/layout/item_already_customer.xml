<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="#E8E8E8"
        android:paddingLeft="16dp"
        android:textColor="@color/deep_gray"
        android:textSize="14sp"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/list_bg_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_already_customer_sex"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/boy_icon" />


        <TextView
            android:id="@+id/item_already_customer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/black_goods_titile"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/item_already_customer_register_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/registered_icon" />


        <TextView
            android:id="@+id/item_already_customer_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="40dp"
            android:text="已注册"
            android:textColor="@color/gary_1"
            android:textSize="16sp"
            android:visibility="visible" />


    </LinearLayout>

</LinearLayout>