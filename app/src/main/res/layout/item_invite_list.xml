<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="#E8E8E8"
        android:paddingLeft="16dp"
        android:textColor="@color/deep_gray"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/list_bg_selector"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/item_invite_sex"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/boy_icon" />


        <TextView
            android:id="@+id/my_inviter_nickname_remind_dot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="top"
            android:layout_marginLeft="-6dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/dot_red"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/my_inviter_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="" />


        <TextView
            android:id="@+id/my_inviter_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="34dp"
            android:text="" />

    </LinearLayout>

</LinearLayout>