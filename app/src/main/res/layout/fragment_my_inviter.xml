<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_act_bg">

    <LinearLayout
        android:id="@+id/my_inviter_fragment_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/invite_bg"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/head_invite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="我的代表"
            android:textColor="@color/main_index_gary" />

        <include layout="@layout/line_lay" />

        <RelativeLayout
            android:id="@+id/my_inviter_fragment_rel"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/my_inviter_nickname"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:background="@drawable/gethaoyouweishezhinicheng"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="该好友未填姓名"
                android:textColor="@color/main_index_gary" />

            <TextView
                android:id="@+id/my_inviter_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="15201532357"
                android:textColor="@color/green" />
        </RelativeLayout>

        <include layout="@layout/line_lay" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_inviter_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="108dp"
            android:src="@drawable/head_invite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/my_inviter_fragment_edittext"
                android:layout_width="230dp"
                android:layout_height="34dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/round_line_gary_radius"
                android:gravity="center"
                android:hint="请输入代表人手机号添加"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/main_index_gary"
                android:textColorHint="@color/b0_gray" />

            <Button
                android:id="@+id/add_inviter"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/login_roate"
                android:gravity="center"
                android:text="添加"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="*代表人添加后不可修改,请仔细核对"
            android:textColor="@color/main_index_gary"
            android:textSize="12sp" />


    </LinearLayout>

</RelativeLayout>