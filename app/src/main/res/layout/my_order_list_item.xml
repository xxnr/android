<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/line_lay" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/my_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text=""
            android:textSize="14sp" />


        <TextView
            android:id="@+id/my_order_pay_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text=""
            android:textColor="@color/orange"
            android:textSize="14sp" />
    </RelativeLayout>

    <include layout="@layout/line_lay" />

    <com.ksfc.newfarmer.widget.UnSwipeListView
        android:id="@+id/my_order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/line_chang"
        android:dividerHeight="1px"
        android:scrollbars="none" />

    <include layout="@layout/line_lay" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/my_order_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text=""
            android:visibility="gone"
            android:textSize="12sp" />

        <TextView
            android:layout_toLeftOf="@+id/my_order_pay_price"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"

            android:text="@string/amounts"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/my_order_pay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/orange_goods_price"
             />
    </RelativeLayout>

    <include layout="@layout/line_lay" />

    <RelativeLayout
        android:id="@+id/go_to_pay_rel"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/go_to_pay"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/login_roate_orange"
            android:text="去付款"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <include layout="@layout/line_lay" />

</LinearLayout>