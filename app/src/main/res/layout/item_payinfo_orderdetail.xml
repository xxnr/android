<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_payInfo_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="阶段一：订金"
            android:textColor="@color/black_goods_titile"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_payInfo_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="已付款"
            android:textColor="@color/black_goods_titile"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <include layout="@layout/line_lay" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="应支付金额："
            android:textColor="@color/main_index_gary"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/to_pay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="72940.00"
            android:textColor="@color/main_index_gary"
            android:textSize="16dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="已支付金额："
            android:textColor="@color/main_index_gary"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/order_yet_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="72940.00"
            android:textColor="@color/main_index_gary"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/to_get_pay_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="查看详情"
            android:textColor="@color/main_index_gary"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_pay_type_ll"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="付款方式："
            android:textColor="@color/main_index_gary"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/order_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银联支付"
            android:textColor="@color/main_index_gary"
            android:textSize="14dp" />

    </LinearLayout>

    <include layout="@layout/line_lay" />

</LinearLayout>