<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <!-- 服务站订单的商品的item-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal">

            <com.ksfc.newfarmer.widget.RecyclerImageView
                android:id="@+id/ordering_item_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/round_line_gary_write"
                android:padding="1dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ordering_item_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:layout_marginRight="10dp"
                        android:maxLines="2"
                        android:text=""
                        android:textSize="14sp" />



                    <TextView
                        android:id="@+id/ordering_item_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text=""
                        android:textColor="@color/orange"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/ordering_item_geshu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text=""
                        android:textColor="@color/main_index_gary"
                        android:textSize="16sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/ordering_item_attr"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="16dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/deep_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ordering_item_geshu_for_rsc_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:textColor="@color/main_index_gary"
                        android:textSize="16sp"
                        android:text=""
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ordering_item_additionsll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/ordering_item_additions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:maxLines="2"
                android:text=""
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>