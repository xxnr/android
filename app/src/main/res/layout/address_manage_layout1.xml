<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_activity"
    >

    <include layout="@layout/title_lay" />

    <ListView
        android:layout_below="@+id/titleview"
        android:id="@+id/address_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:divider="@color/default_act_bg"
        android:dividerHeight="12dp"
        android:listSelector="#00000000"
        android:scrollbars="none"/>


    <RelativeLayout
        android:layout_below="@+id/titleview"
        android:id="@+id/none_address_rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/none_address_image"
            android:layout_centerHorizontal="true"
            android:background="@drawable/address_none"
            android:layout_width="121dp"
            android:layout_height="121dp"
            android:layout_marginTop="90dp" />

        <TextView
            android:layout_marginTop="40dp"
            android:layout_below="@+id/none_address_image"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:text="您还没有收货地址哦，添加一个吧~"
            android:textColor="@color/deep_gray"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</RelativeLayout>