<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_act_bg"
    android:orientation="vertical"
    android:padding="11dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/huafei_img"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_line_gary_write"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/zhanweitu" />

        <TextView
            android:id="@+id/huafei_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="氮磷钾超大装50KG"
            android:textColor="@color/black_goods_titile"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/huafei_xianjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="￥1800"
            android:textColor="@color/orange_goods_price"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>