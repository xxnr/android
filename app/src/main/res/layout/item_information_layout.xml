<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <LinearLayout
        android:background="@drawable/list_bg_selector"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="16dp"
            android:id="@+id/information_image"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:background="@drawable/round_line_gary"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/zhanweitu_wide" />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/information_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:ellipsize="end"
                android:maxLines="2"
                />

            <TextView
                android:id="@+id/information_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:textColor="@color/deep_gray"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>



</LinearLayout>