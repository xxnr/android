<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg_selector">

    <ImageView
        android:layout_marginLeft="16dp"
        android:id="@+id/information_image"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_line_gary"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/zhanweitu_wide" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/information_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/information_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:text="河南日报：新农人网络科技有限公司打造新新农人网络平台"
            android:textColor="@color/black_goods_titile"
            android:maxLines="3"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/information_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="2015-08-19"
            android:textColor="@color/deep_gray"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>