<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/list_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/invite_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="订单号:d798798798"
            android:textColor="@color/black_goods_titile"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="订单总额"
            android:textColor="@color/main_index_gary"
            android:textSize="14sp" />
    </RelativeLayout>

    <include layout="@layout/line_lay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="待付金额："
            android:textColor="@color/black_goods_titile"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/to_pay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="72940.00"
            android:textColor="@color/orange_goods_price"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="订单总额："
            android:textColor="@color/black_goods_titile"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="72940.00"
            android:textColor="@color/orange_goods_price"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <include layout="@layout/line_lay" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:background="@color/list_bg"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/goods_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:singleLine="true"
            android:text="中化好苗子有机肥 -1件，中化好苗子有机肥 -1件，中化好苗子有机肥 -1件，中化好苗子有机肥 -1件"
            android:textColor="@color/main_index_gary"
            android:textSize="14sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/go_to_pay"
            android:layout_width="66dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/login_roate_orange"
            android:text="去支付"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>

    <include layout="@layout/line_lay" />

</LinearLayout>